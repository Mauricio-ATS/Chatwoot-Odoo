<?xml version="1.0"?>
<odoo>
    <record id="view_chatwoot_users_list" model="ir.ui.view">
        <field name="name">chatwoot.users.list</field>
        <field name="model">chatwoot.users</field>
        <field name="priority" eval="16"/>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="api_token"/>
            </list>
        </field>
    </record>

    <record id="view_chatwoot_users_form" model="ir.ui.view">
        <field name="name">chatwoot.users.form</field>
        <field name="model">chatwoot.users</field>
        <field name="priority" eval="16"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sync_inboxes"
                            string="Sincronizar Inboxes"
                            type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="api_token"/>
                    </group>

                    <group string="Inboxes">
                        <field name="inbox_ids">
                            <list editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="inbox_id"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_menu_chatwoot_users_conf" model="ir.actions.act_window">
        <field name="name">Chatwoot Users</field>
        <field name="res_model">chatwoot.users</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem
        id="menu_chatwoot_users_conf"
        name="Chatwoot Users"
        parent="menu_chatwoot"
        action="action_menu_chatwoot_users_conf"
        sequence="99"
    />
</odoo>
