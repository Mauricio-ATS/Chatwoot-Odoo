<?xml version="1.0"?>
<odoo>
    <record id="view_chatwoot_instance_tree" model="ir.ui.view">
        <field name="name">chatwoot.instance.tree</field>
        <field name="model">chatwoot.instance</field>
        <field name="priority" eval="16"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="base_url"/>
                <field name="name"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="team_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_chatwoot_instance_form" model="ir.ui.view">
        <field name="name">chatwoot.instance.form</field>
        <field name="model">chatwoot.instance</field>
        <field name="priority" eval="16"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sync_teams"
                            string="Sincronizar Teams"
                            type="object"
                            class="oe_highlight"
                            icon="fa-refresh"/>
                </header>
                <sheet>
                    <group>
                        <field name="base_url"/>
                        <field name="name"/>
                        <field name="account_id"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="UsuÃ¡rios">
                            <field name="user_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="inbox_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Teams">
                            <field name="team_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="team_id"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_menu_chatwoot_conf" model="ir.actions.act_window">
        <field name="name">Chatwoot Config</field>
        <field name="res_model">chatwoot.instance</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_chatwoot"
        name="Chatwoot"
        parent="base.menu_custom"
        sequence="99"
    />
    
    <menuitem
        id="menu_chatwoot_conf"
        name="Chatwoot Config"
        parent="menu_chatwoot"
        action="action_menu_chatwoot_conf"
        sequence="99"
    />
</odoo>