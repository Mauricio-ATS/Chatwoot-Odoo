<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_chatwoot_message_template_tree" model="ir.ui.view">
        <field name="name">chatwoot.message.template.list</field>
        <field name="model">chatwoot.message.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="body"/>
                <field name="active"/>
                <field name="attachment_ids" widget="many2many_binary"/>
            </list>
        </field>
    </record>

    <record id="view_chatwoot_message_template_form" model="ir.ui.view">
        <field name="name">chatwoot.message.template.form</field>
        <field name="model">chatwoot.message.template</field>
        <field name="arch" type="xml">
            <form string="Chatwoot Message Template">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="body"/>
                        <field name="active"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_chatwoot_message_template" model="ir.actions.act_window">
        <field name="name">Chatwoot Templates</field>
        <field name="res_model">chatwoot.message.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_chatwoot_templates"
              name="Mensagens Prontas"
              parent="chatwoot_odoo.menu_chatwoot"
              action="action_chatwoot_message_template"
              />
</odoo>
