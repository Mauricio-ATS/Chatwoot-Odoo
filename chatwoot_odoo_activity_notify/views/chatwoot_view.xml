<?xml version="1.0"?>
<odoo>
    <record id="view_chatwoot_activity_due_days_tree" model="ir.ui.view">
        <field name="name">chatwoot.activity_due_days.tree</field>
        <field name="model">chatwoot.instance</field>
        <field name="inherit_id" ref="chatwoot_odoo.view_chatwoot_instance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="activity_due_days"/>
            </xpath>
        </field>
    </record>

    <record id="view_chatwoot_activity_due_days_form" model="ir.ui.view">
        <field name="name">chatwoot.activity_due_days.form</field>
        <field name="model">chatwoot.instance</field>
        <field name="inherit_id" ref="chatwoot_odoo.view_chatwoot_instance_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group name="activity_notify_group" string="Notificação de Atividades">
                    <field name="activity_due_days"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>